= extend('/slm/layouts/default')
= partial('/slm/mixins/copy.mixin.slm');


- title = 'Spinner'

= content('main')
  section class='bg-white p-4'
    h1 class='h4 mb-0' 
      = title
  section class='p-4'
    h2 class='h4' = 'Spinner'

    == this.include('elements/spinner/spinner.md');

    h3 class='h5' = 'Demonstration'
    div
      == this.include('elements/spinner/spinner.slm');

    h3 class='h5' = 'Markup'
    
    = mixin('copy', 'copy-spinner')
    div
      pre class='mt-0' data-content='copy-spinner'
        = this.include('elements/spinner/spinner.slm');